<%
const title = 'Signed in';
layout(_view.get('_layout/main'));
block('title', title)
block('breadcrumbs', title);
%>

<div class="row">
    <div class="col-md-6 offset-md-3 col-lg-4 offset-lg-4">
        <h3 class="mb-4">
            Signed in as
        </h3>
        <form action="auth/logout" method="post">
            <p class="text-center">
                <b><%- model.get('name') %></b>
                (<%- model.get('role') %>)
            </p>
            <p class="mt-3">
                <button type="submit" class="btn btn-danger btn-block">
                    <span class="fas fa-sign-out-alt"></span>
                    Sign out
                </button>
            </p>
        </form>
   </div>
</div>
