
<div class="panel panel-danger">
    <div class="panel-heading">
        <h3 class="panel-title">
            <%- _t('Categories') %>
        </h3>
    </div>
    <div class="panel-body">
        <div id="category-nav" class="list-group mb0">
        <% for (const {item, count} of categories) { %>
        <% const active = activeId === item.getId().toString() ? 'active' : ''; %>
        <a href="article/category?category=<%- item.getId() %>" class="list-group-item <%- active %>">
            <span class="badge"><%- count %></span>
            <%= item.getTitle() %>
        </a>
        <% } %>
        </div>
    </div>
</div>