<!-- _part/field/checkbox -->

<% let params = {}; %>
<%- include('_set-params', {params}) %>

<div class="form-group">
    <div class="col-sm-10 col-sm-offset-2">
        <div class="checkbox">
            <label>
                <input id="<%- params.id %>" name="<%- params.name %>" type="hidden">
                <input type="checkbox" class="checkbox-control" <%- params.value ? 'checked' : '' %>>
                <%- params.label %>
            </label>
        </div>
    </div>
</div>