<!-- _part/field/auth/input -->
<%
const params = {
    type: typeof type === 'undefined' ? 'text' : type,
    autocomplete: typeof autocomplete === 'undefined' ? '' : ` autocomplete="${autocomplete}"`
};
%>
<%- include('../_params', {params}) %>

<div class="form-group has-feedback <%- params.error ? 'has-error' : '' %>">
    <input name="<%- params.name %>" type="<%- params.type %>" class="form-control"
           placeholder="<%- params.placeholder %>" <%- params.autocomplete %>
           value="<%- params.value %>">
    <span class="form-control-feedback <%- iconClass %>"></span>
    <div class="hint-block"><%- params.error %></div>
</div>