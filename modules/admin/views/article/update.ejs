<% layout(_view.get('_layouts/form')) -%>

<% block('title', 'Update article') -%>

<% _view.setData('breadcrumbs', [
    {title: 'Articles', url: 'admin/article'},
    {title: model.getId()}
]) %>

<%- partial('./form') %>

<% let photos = model.get('photos'); %>
<% if (photos instanceof Array) { %>
<div class="form-group">
    <label class="col-sm-2 control-label"></label>
    <div class="col-sm-10">
        <p class="form-control-static thumb-list clearfix">
            <% for (let photo of photos) { %>
            <a href="<%- _url(['photo/view', photo])%>" class="thumb-item">
                <img src="<%- photo.getSmall() %>" class="thumbnail img-responsive">
            </a>
            <% } %>
        </p>
    </div>
</div>
<% } %>