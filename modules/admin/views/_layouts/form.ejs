<% layout(_view.get('_layouts/content')) -%>

<% if (model.hasError()) { %>
<div class="row">
    <div class="col-sm-10 col-sm-offset-2">
        <div class="alert alert-danger">
            <% for (let attr of Object.keys(model.getErrors())) { %>
            <p>
                <b><%- model.getLabel(attr) %>:</b>
                <%- _t(model.getFirstError(attr))%>
            </p>
            <% } %>
        </div>
    </div>
</div>
<% } else if (_controller.isPost()) { %>
<div class="row">
    <div class="col-sm-10 col-sm-offset-2">
        <div class="alert alert-success">The object is stored</div>
    </div>
</div>
<% } %>

<form action="<%= _controller.req.originalUrl %>" method="post" class="form-horizontal form" autocomplete="off">

    <input type="hidden" name="referrer" value="<%= _controller.getRefUrl() %>">

    <div class="object-controls">
        <button class="btn btn-primary" type="submit">Save</button>

        <% if (!model.isNew()) { %>

        <a href="<%- _url(['view', model]) %>" class="btn btn-success">View</a>

        <button class="btn btn-danger action-submit" type="button"
                data-url="<%- _url(['delete', model]) %>"
                data-confirm="Remove this object?">
            Delete
        </button>
        <% } %>
    </div>

    <%- body -%>

</form>