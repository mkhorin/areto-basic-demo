<% layout(_view.get('_layouts/view')) -%>

<% block('title', 'Comment') -%>

<% _view.setData('breadcrumbs', [
    {title: 'Comments', url: '/admin/comment'},
    {title: model.getId()}
]) %>

<%- partial(_view.get('_parts/fields/relation'), {
    attr: 'article',
    viewRoute: 'article/view'
}) %>

<% let stat = _view.get('_parts/fields/static'); %>

<%- partial(stat, {attr: 'name'}) %>

<%- partial(stat, {attr: 'email'}) %>

<%- partial(stat, {attr: 'status'}) %>

<%- partial(stat, {
    attr: 'content'
}) %>

<%- partial(stat, {
    attr: 'updatedAt',
    value: _format(model.get('updatedAt'), 'timestamp')
}) %>

<%- partial(stat, {
    attr: 'createdAt',
    value: _format(model.get('createdAt'), 'timestamp')
}) %>