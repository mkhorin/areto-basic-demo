
<%- partial(_view.get('_parts/fields/select'), {
    attr: 'articleId',
    label: 'Article',
    items: articles,
    empty: '-',
    itemLabelKey: 'title'
}) %>

<%- partial(_view.get('_parts/fields/input'), {
    attr: 'title'
}) %>

<% let file = model.get('file'); %>
<%- partial(_view.get('_parts/fields/uploader'), {
    attr: 'file',
    url: 'file/upload',
    options: {
        maxSize: 2000000,
        imageOnly: true
    },
    files: file ? [file.model] : null
}) %>
