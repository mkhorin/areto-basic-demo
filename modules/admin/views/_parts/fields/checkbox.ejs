<!-- _parts/fields/checkbox -->
<%
    let _id = typeof id === 'undefined' ? model.getFormAttributeId(attr) : id;
    let _name = typeof name === 'undefined' ?  model.getFormAttributeName(attr) : name;
    let _value = typeof value === 'undefined' ?  (model.get(attr) ? 'checked' : '') : value;
    let _label = typeof label === 'undefined' ? model.getLabel(attr) : label;
%>
<div class="form-group">
    <div class="col-sm-10 col-sm-offset-2">
        <div class="checkbox checkbox-init">
            <label>
                <input id="<%- _id %>" name="<%- _name %>" type="hidden">
                <input type="checkbox" <%- _value %>>
                <%- _label %>
            </label>
        </div>
    </div>
</div>