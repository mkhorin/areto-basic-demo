<%
    let _label = typeof label === 'undefined' ? model.getLabel(attr) : label;
    let _items = model.get(attr);

    _items = _items instanceof Array ? _items : _items ? [_items] : null;
%>
<div class="form-group">
    <label class="col-sm-2 control-label"><%- _label %></label>
    <div class="col-sm-10">
        <div class="form-control-static clearfix">
        <% if (_items) { %>
        <% for (let model of _items) { %>
            <% if (typeof itemTemplate !== 'undefined') { %>
            <%- partial(itemTemplate, {model}) %>
            <% } else if (typeof viewRoute !== 'undefined') { %>
            <a href="<%- u([viewRoute, model])%>" class="rel-list-item">
                <%= model.getTitle() %>
            </a>
            <% } else { %>
            <span class="rel-list-item">
                <%= model.getTitle() %>
            </span>
            <% } %>
        <% }} else { %>
            <i class="text-danger">[not set]</i>
        <% } %>
        </div>
    </div>
</div>