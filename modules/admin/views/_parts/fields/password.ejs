<!-- _parts/fields/password -->

<% let params = {}; %>
<%- partial('_set-params', {params}) %>

<div class="form-group<%- params.required %> <%- params.error ? 'has-error' : '' %>">
    <label for="<%- params.id %>" class="col-sm-2 control-label">
        <%- params.label %>
    </label>
    <div class="col-sm-10">
        <input id="<%- params.id %>" name="<%- params.name %>" type="password" class="form-control">
        <div class="hint-block"><%- params.error %></div>
    </div>
</div>