<% layout(_view.get('_layout/view')) -%>

<% block('title', 'User') -%>

<% _data.set('breadcrumbs', [{
    title: 'Users',
    url: 'admin/user'
},{
    title: model.getId()
}]) %>

<% let stat = _view.get('_part/field/static'); %>

<%- partial(stat, {
    attr: 'status'
}) %>

<%- partial(stat, {
    attr: 'name'
}) %>

<%- partial(stat, {
    attr: 'email'
}) %>

<%- partial(stat, {
    attr: 'role'
}) %>

<%- partial(stat, {
    attr: 'updatedAt',
    value: _format(model.get('updatedAt'), 'timestamp'),
    escaping: false
}) %>

<%- partial(stat, {
    attr: 'createdAt',
    value: _format(model.get('createdAt'), 'timestamp'),
    escaping: false
}) %>