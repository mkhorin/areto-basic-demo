<!DOCTYPE html>
<html lang="<%- _controller.language %>">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <base href="<%- _baseUrl %>">
  <title><%- blocks.title %> - Areto Basic Demo</title>

  <link href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" rel="stylesheet" crossorigin="anonymous">
  <link href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" rel="stylesheet" crossorigin="anonymous">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">

  <%- stylesheets %>

  <link rel="stylesheet" href="admin/style/ajax-uploader.css">
  <link rel="stylesheet" href="style/common.css">
</head>
<body data-csrf="<%- _controller.getCsrfToken() %>">

<div class="wrapper">

  <nav class="navbar navbar-expand-lg bg-danger mb-4" data-bs-theme="dark">
    <div class="container">
      <a href="" class="navbar-brand">
        <b>Areto</b> Basic Demo
      </a>
      <button class="navbar-toggler" type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a href="auth/logout" class="nav-link">
              Logout (<%- _controller.user.getTitle() %>)
            </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container">
    <% if (blocks.breadcrumbs) { %>
    <%- _view.placeWidget('breadcrumbs', {
      links: blocks.breadcrumbs.get()
    }) %>
    <% } %>
  </div>

  <div class="container">
    <%- include('../_part/flashAlert') %>

    <%- body %>

  </div>

  <footer class="footer bg-light">
    <div class="container">
      <div class="text-center">Â© Areto Basic Demo</div>
    </div>
  </footer>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>

<% if (_controller.language === 'ru') { %>
<script src="script/datepicker.ru.js"></script>
<% } %>

<%- scripts %>

<script src="admin/script/ajax-uploader.js"></script>
<script src="admin/script/common.js"></script>

</body>
</html>