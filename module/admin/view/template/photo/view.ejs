<% layout(_view.get('_layout/view')) -%>

<% block('title', 'Photo') -%>

<% _data.set('breadcrumbs', [{
    title: 'Photos',
    url: 'admin/photo'
},{
    title: model.getId()
}]) %>

<% block('customControls', `<button class="btn btn-primary action-submit" type="button"
    data-url="${_url(['assign-main', model])}">Assign the main</button>`) -%>

<%- include(_view.get('_part/field/relation'), {
    attr: 'article',
    viewRoute: 'article/view'
}) %>

<%- include(_view.get('_part/field/static'), {
    attr: 'title',
    escaping: false
}) %>

<div class="form-group">
    <label class="col-sm-2 control-label">Photo</label>
    <div class="col-sm-10">
        <p class="form-control-static">
            <img src="<%- model.getLarge() %>" class="thumbnail img-responsive">
        </p>
    </div>
</div>