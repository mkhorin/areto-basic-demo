
<div class="row">
    <div class="col-sm-3">
        <img src="<%- model.getMedium() %>" class="thumbnail img-responsive">
    </div>
    <div class="col-sm-9">
        <p><b>Article:</b>
            <% const article = model.get('article') %>
            <% if (article) { %>
            <a href="<%- _url('article/view', article) %>">
                <%= article.getTitle() %>
            </a>
            <% } else { %>
            <i class="text-danger">[not set]</i>
            <% } %>
        </p>
        <p><b>Title:</b>
            <%= model.getTitle() %>
        </p>
    </div>
</div>

