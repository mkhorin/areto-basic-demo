<%
layout(_view.get('_layout/form'));
block('title', 'Update comment');
block('breadcrumbs', {
    title: 'Comments',
    url: 'admin/comment'
},{
    title: model.getId()
});
%>
<%- include('./_form') %>

<% const photos = model.get('photos'); %>
<% if (Array.isArray(photos)) { %>
<div class="form-group">
    <label class="col-sm-2 control-label"></label>
    <div class="col-sm-10">
        <p class="form-control-static thumbnail-list clearfix">
            <% for (const photo of photos) { %>
            <a href="admin/photo/view?id=<%- photo.getId() %>" class="thumbnail-item">
                <img src="<%- photo.getSmall() %>" class="thumbnail img-responsive" alt="Photo">
            </a>
            <% } %>
        </p>
    </div>
</div>
<% } %>