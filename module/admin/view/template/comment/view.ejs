<%
layout(_view.get('_layout/view'));
block('title', 'Comment');
block('breadcrumbs', {
  title: 'Comments',
  url: 'admin/comment'
},{
  title: model.getId()
});
%>

<%- include(_view.get('_part/field/relation'), {
  attr: 'article',
  viewRoute: 'article/view'
}) %>

<% const stat = _view.get('_part/field/static'); %>

<%- include(stat, {
  attr: 'name'
}) %>

<%- include(stat, {
  attr: 'email'
}) %>

<%- include(stat, {
  attr: 'status'
}) %>

<%- include(stat, {
  attr: 'content'
}) %>

<%- include(stat, {
  attr: 'updatedAt',
  value: _format(model.get('updatedAt'), 'timestamp')
}) %>

<%- include(stat, {
  attr: 'createdAt',
  value: _format(model.get('createdAt'), 'timestamp')
}) %>