<!-- _part/field/static -->

<% let params = {
    escaping: typeof escaping === 'undefined' ? true : escaping
}; %>
<%- partial('_set-params', {params}) %>

<div class="form-group">
    <label class="col-sm-2 control-label"><%- params.label %></label>
    <div class="col-sm-10">
        <div class="form-control-static">
            <% if (params.escaping) { %>
            <%= _format(params.value, 'raw') %>
            <% } else { %>
            <%- _format(params.value, 'raw') %>
            <% } %>
        </div>
    </div>
</div>