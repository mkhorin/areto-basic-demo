<!-- _part/field/datepicker -->

<% let params = {}; %>
<%- include('_params', {params}) %>

<div class="form-group<%- params.required %> <%- params.error ? 'has-error' : '' %>">
    <label for="<%- params.id %>" class="col-sm-2 control-label">
        <%- params.label %>
    </label>
    <div class="col-sm-10">
        <div class="input-group">
            <input id="<%- params.id %>" name="<%- params.name %>" value="<%- params.value %>"
                   type="text" class="form-control datepicker">
            <div class="input-group-addon">
                <i class="glyphicon glyphicon-calendar"></i>
            </div>
        </div>
        <div class="hint-block"><%- params.error %></div>
    </div>
</div>