
<div class="panel panel-success">
    <div class="panel-heading">
        <h3 class="panel-title">Recent comments</h3>
    </div>
    <div class="panel-body">
        <% for (let comment of widget.comments) { %>
        <p>
            <a href="/article/view?id=<%- comment.get('articleId') %>">
                <%= comment.getTitle() %>
            </a>
        </p>
        <% } %>
    </div>
</div>