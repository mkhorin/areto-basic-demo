
<%- _t('app', 'Sort by') %>

<div class="dropdown inline-block">

    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
        <% let link = sort.getLink(Object.keys(sort.getOrders())[0]) %>
        <span class="glyphicon glyphicon-arrow-<%- link.options.class === 'asc' ? 'up' : 'down' %>"></span>
        <%- _t('app', link.label) %>
        <span class="caret"></span>
    </button>

    <ul class="dropdown-menu">
        <% for (let attr of Object.keys(sort.attrs)) { %>
        <% let link = sort.getLink(attr); %>
        <li>
            <a href="<%- link.url %>">
                <%- _t('app', link.label) %>
            </a>
        </li>
        <% } %>
    </ul>
</div>