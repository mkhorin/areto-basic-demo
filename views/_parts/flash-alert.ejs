<%
    let flashes = controller.getFlash();
    if (flashes) {
        for (let key in flashes) {
            let flash = flashes[key];
            if (key === 'danger' || key === 'warning' ||  key === 'success') {
%>
    <div class="alert alert-<%- key %> flash-alert">
    <% for (let item of flash) { %>
        <p><%= item %></p>
    <% } %>
    </div>
<% }}} %>